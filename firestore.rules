rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to the vendors collection
    match /vendors/{vendorId} {
      // Allow read if the user is authenticated and either:
      // 1. The document ID (vendorId) matches the vendor_key field, or
      // 2. The user's ID matches the userId field in the document
      allow read: if request.auth != null && 
                  (vendorId == resource.data.vendor_key || 
                   request.auth.uid == resource.data.userId);
      
      // Allow create if the user is authenticated and the userId field matches their UID
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid;
      
      // Allow update if the user is authenticated and they own the document
      allow update: if request.auth != null && 
                    resource.data.userId == request.auth.uid && 
                    request.resource.data.userId == request.auth.uid;
      
      // Disallow delete operations from clients
      allow delete: if false;
    }
    
    // Allow access to the cancels collection
    match /cancels/{cancelId} {
      // Allow read if the user is authenticated and the vendorkey field matches a vendor they own
      allow read: if request.auth != null && 
                  exists(/databases/$(database)/documents/vendors/$(resource.data.vendorkey)) && 
                  get(/databases/$(database)/documents/vendors/$(resource.data.vendorkey)).data.userId == request.auth.uid;
      
      // Allow create if the user is authenticated and the vendorkey field matches a vendor they own
      allow create: if request.auth != null && 
                    exists(/databases/$(database)/documents/vendors/$(request.resource.data.vendorkey)) && 
                    get(/databases/$(database)/documents/vendors/$(request.resource.data.vendorkey)).data.userId == request.auth.uid;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
